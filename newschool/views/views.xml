    <!-- ACTION SERVER: recorriendo records-->
    <record model="ir.actions.server" id="newschool.student_server_action_2">
      <field name="name">student server action 2</field>
      <field name="model_id" ref="model_res_partner"/>
      <field name="binding_model_id" ref="model_res_partner"/>
      <field name="state">code</field>
      <!--SI EL C칍DIGO ES DE M츼S DE UNA L칈NEA HAY QUE INDENTARLO DESDE EL INICIO-->
      <!--Tambi칠n se puede llamar a una funci칩n implementada en el modelo ==> model.matricular()-->
      <field name="code">
mensaje = ''
for r in records:
  mensaje += str(r.name)
raise UserError(mensaje)
      </field>
    </record>

     <record model="ir.actions.server" id="newschool.student_server_action_3">
